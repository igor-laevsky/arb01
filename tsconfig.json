{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "outDir": "build",
    "types": [
      "vitest/importMeta"
    ]
  },
  "include": ["src"]
}
